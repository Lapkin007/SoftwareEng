<Window x:Class="Group7_Hotel_Service_Management_System.History"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Group7_Hotel_Service_Management_System"
        mc:Ignorable="d"
        Title="HSMS-History" Height="450" Width="1000">
    <Grid>
        <Viewbox Stretch=" fill">
            <Canvas Height="300" Width="700">
                <DataGrid x:Name="DG_history" Height="300" Width="700" d:ItemsSource="{d:SampleData ItemCount=5}"/>

            </Canvas>
        </Viewbox>
    </Grid>
</Window>
